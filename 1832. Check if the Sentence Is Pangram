class Solution(object):
    def checkIfPangram(self, sentence):
        """
        :type sentence: str
        :rtype: bool
        """
        a=97
        count=0
        b=0
        
        
        
        
        for i in range(len(sentence)):
            for f in range(0,len(sentence)):
                # print ("sentence[f]",sentence[f])
                if ord(sentence[f]) ==a:
                    # print ("sentence[f]",sentence[f])
                    count=count+1
                    b=b+1         
                    a=97+b
                    

            

        if count ==26:
            return True
        else:
            return False
            
            
